{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts","src/**/*.js"
  ]
}
